<h1>New game</h1>
<div>
<% @letters.each do |letter| %>
  <p class="grid letter"><%= letter %></p>
<% end %>
<div>
<form action="/score" method="post" data-turbo="false">
  <div class="label">
    <label for="suggestion">What is the longer word you can find?</label>
  </div>
  <div>
    <input id="suggestion" type="text" placeholder="Type here.." name="suggestion">
    <input type="submit" value="Ask!">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters%>
  </form>
</div>
